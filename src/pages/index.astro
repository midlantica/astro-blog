---
import Layout from '../layouts/Layout.astro'
import Blog from '../components/blog.astro'

import Gene from '/gene.png'

const avaMean = 'src/images/ava-mean.png'
const avaNice = 'src/images/ava-nice.png'

const posts = await Astro.glob('../posts/*.md')

---

<Layout title="Ava's Fun World - Home">
	<Blog />
</Layout>

<style lang="scss" is:global>

	article:last-child {
		margin-bottom: 0 !important;
	}

	[class^="astro-imagetools-background-image"] {
    @apply rounded-t-xl rounded-b-none h-40 min-h-[12rem] bg-no-repeat;
  }

  article:first-child {
    grid-column: span 2 !important;
  }

</style>

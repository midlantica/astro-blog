---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import '../styles.scss'
export interface Props {
  title?: string;
}

const { title = 'Avas Fun World' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>{title}</title>
</head>
<body class="w-screen h-screen gradientFromHell mx-auto p-12 text-center flex flex-col justify-start">
  <Header />
  <slot />
  <Footer />
</body>
</html>

<style lang="scss" is:global>
  $avaRhubarb: #8100a8ff;
  $avaViolet: #871fffff;
  $avaPizzazz: #ff57eeff;
  $avaLemon: #fffd70ff;
  $gradient-top: linear-gradient(0deg, $avaRhubarb, $avaViolet, $avaPizzazz, $avaLemon);

  .gradientFromHell {
    background-image: $gradient-top;
  }


</style>

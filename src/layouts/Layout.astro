---
import '../styles/styles.scss'
import Header from '../components/header.astro'

export interface Props {
  title?: string;
}

const { title = 'Avas Fun World' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0" />
  <title>{title}</title>
</head>
<body class="container w-screen h-screen mx-auto p-6 text-center flex flex-col gap-2 justify-start gradientFromHell">
  <Header />
  <slot />
</body>
</html>

<style lang="scss" is:global>
  * {
    transition: all .5 ease-out;
  }

</style>

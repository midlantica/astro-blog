---
const avaMean = 'src/images/ava-mean.png'
const avaNice = 'src/images/ava-nice.png'
const headerText = "Ava's Fun World"

---

<header class="flex flex-col gap-0 m-auto justify-center p-3 rounded-3xl border border-white w-full">
  <div class="flex flex-row gap-4 m-auto justify-center">
    <h1 class="font-extrabold font-serif text-6xl text-avaLemon self-center">{headerText}</h1>
    <img class="h-36 items-center m-0 jelloHorizontal" src={avaMean} alt="" />
  </div>
  <div class="flex flex-row gap-4 m-auto justify-center">
    <p class="text-avaLemon"><a href="#">Home</a></p>
    <p class="text-avaLemon"><a href="#">Blog</a></p>
    <p class="text-avaLemon"><a href="#">About</a></p>
  </div>
</header>

<style lang="scss">

  .jelloHorizontal {
    animation: jelloHorizontal 2s both;
    animation-delay: 1s;
    animation-play-state: running;
    animation-iteration-count: 3;
    cursor: pointer;
  }


  .jelloHorizontal:hover {
    animation: jelloHorizontal 2s both;
    // animation-timing-function: ease;
    // animation-delay: initial !important;
    animation-play-state: running;
    // background: red;
  }

  @keyframes jelloHorizontal {
    0% { transform: scale3d(1, 1, 1); }
    30% { transform: scale3d(1.25, 0.75, 1); }
    40% { transform: scale3d(0.75, 1.25, 1); }
    50% { transform: scale3d(1.15, 0.85, 1); }
    65% { transform: scale3d(0.95, 1.05, 1); }
    75% { transform: scale3d(1.05, 0.95, 1); }
    100% { transform: scale3d(1, 1, 1); }
  }
</style>